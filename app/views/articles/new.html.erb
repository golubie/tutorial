<head>
  <title>Napisi novi clanak</title>
</head>
<body>
	<%= form_for(@article, :html => {role: "form"}) do |f| %>
		<%= f.label :title %><br>
		<%= f.text_field :title, placeholder: "Title of article", autofocus: true %><br>
		
		<%= f.label :description %><br>
		<%= f.text_area :description, rows: 10, placeholder: "Body of article" %><br>


		<%= f.submit %>
	<% end %>
</body>

